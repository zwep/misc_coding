<CustButton@Button>
	size_hint_y: None
	height: 50
	
<SoundSummarizer>:
	orientation: 'vertical'
    id: henkiseensteen
	display: entry, entry_second
	cols: 2
	rows: 4
	spacing: 5
	padding: 10, 5, 10, 5
	
	GridLayout:
		orientation: 'vertical'
		cols: 1
		rows: 7
		height: self.minimum_height
		
		CustButton:
			text: 'Record for 10 seconds' 
			on_press: henkiseensteen.print_text('Recording...')
			on_release: henkiseensteen.record_sound(10)		
				
		CustButton:
			text: 'Play sound' 
			on_press: henkiseensteen.print_text('Playing sound...')
			on_release: henkiseensteen.play_sound() 		
			
		CustButton:
			text: 'Sound to text (NL)' 
			on_press: henkiseensteen.print_text('Translating Dutch sound...')
			on_release: henkiseensteen.speech_to_text('nl-NL')
			
		CustButton:
			text: 'Sound to text (EN)' 
			on_press: henkiseensteen.print_text('Translating English sound...')
			on_release: henkiseensteen.speech_to_text('en-US')			
			
		CustButton:
			text: 'Generate news article!' 
			on_press: henkiseensteen.print_text('fetching data...')
			on_release: henkiseensteen.generate_news()

		CustButton:
			text: 'Summarize text!' 
			on_press: henkiseensteen.print_text('...')
			on_release: henkiseensteen.summarize(entry.text)
			
		GridLayout:
			cols: 3
			rows: 1
			CustButton:
				text: '-Stopwords'
				on_press: henkiseensteen.print_text('Remobed stopwords')
				on_release: henkiseensteen.clean_stopwords()
			CustButton:
				text: 'Stemming'
				on_press: henkiseensteen.print_text('Stemmed text')
				on_release: henkiseensteen.clean_stemming()
			CustButton:
				text: 'Stemming - Stopwords' 
				on_press: henkiseensteen.print_text('Stemmed text and no stopwords')
				on_release: henkiseensteen.clean_stopwords_and_stemming()		


			
			
	GridLayout:
		orientation: 'vertical'
		cols: 1
		rows: 2
		
		TextInput:
			size_hint_y: 0.9
			height: 100
			id: entry
			font_size: 32
			multiline: True
				
		TextInput:
			size_hint_y: None
			height: 50
			id: entry_second
			font_size: 20
			multiline: False


<TextLayout>:
    id: henkiseensteen
	display: entry, entry_second
	cols: 1
	rows: 2
	spacing: 30
	padding: 10
	
	BoxLayout:
		TextInput:
			id: entry
			font_size: 16
			multiline: True
			
	BoxLayout:
		TextInput:
			id: entry_second
			font_size: 12
			multiline: True 	