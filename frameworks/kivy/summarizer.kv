# Custom button
<CustButton@Button>:
    font_size: 32
	size: 50, 50
	
# Define id so I can refer to the CalcGridLayout
# class functions
# Display points to the entry widget
<CallGridSummarizer>:
    id: summarizer
    display: entry
    rows: 5
    padding: 10
    spacing: 10
 
    # Where input is displayed
    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: True 
			
    # When equals is pressed pass text in the entry
    # to the calculate function
    BoxLayout:
        spacing: 10 
        CustButton:
            text: "Summarize" 
            on_press: summarizer.summarize(entry.text) 